<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LabelLayoutTest2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LabelLayoutTest2"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="MarginNoStackLayout">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MarginNoStackLayout}"
                Route="MainPage" />
        </Tab>

        <Tab Title="MarginAndStackLayout">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MarginAndStackLayout}"
                Route="MainPage" />
        </Tab>

        <Tab Title="NoMarginNoStackLayout">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:NoMarginNoStackLayout}"
                Route="MainPage" />
        </Tab>
    </TabBar>

</Shell>
